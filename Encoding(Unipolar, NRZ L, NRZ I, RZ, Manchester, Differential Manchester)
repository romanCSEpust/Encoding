plt.subplot(2,3,5) 
ex=[]
ey=[]
x=0
for bit in val:
 if bit == '0':
   ex.append(x)
   ey.append(1)
   ex.append(x+0.5)
   ey.append(1)
   ex.append(x+.5)
   ey.append(-1)
   ex.append(x+1)
   ey.append(-1)
 else :
   ex.append(x)
   ey.append(-1)
   ex.append(x+.5)
   ey.append(-1)
   ex.append(x+.5)
   ey.append(1)
   ex.append(x+1)
   ey.append(1)
 x=x+1

   
